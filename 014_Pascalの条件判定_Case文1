// Pascalの条件判定 Case文の例
// Interface部のUses直下にTDayを列挙型で定義、その下で DayをTDay型で定義
// procedure TForm1.Button1Click(Sender: TObject); にて、変数Dayに代入とCase文による判定実施
// TDay型の変数Dを使うことにより、Case文の記述に誤りがあると、コンパイラーがエラーとして見つけてくれるので便利です。

unit Unit1;

{$mode objfpc}{$H+}

interface

uses
  Classes, SysUtils, Forms, Controls, Graphics, Dialogs, StdCtrls;

type
  TDay = (Mon, Tue, Wed, Thu, Fri, Sat, Sun);
var
  Day : TDay;

type

  { TForm1 }

  TForm1 = class(TForm)
    Button1: TButton;
    Memo1: TMemo;
    procedure Button1Click(Sender: TObject);
  private

  public

  end;

var
  Form1: TForm1;

implementation

{$R *.lfm}

{ TForm1 }

procedure TForm1.Button1Click(Sender: TObject);
begin
  Day := Sat;

  Case Day of
  Mon : Memo1.Append('今日は月曜日です');
  Tue : Memo1.Append('今日は火曜日です');
  Wed : Memo1.Append('今日は水曜日です');
  Thu : Memo1.Append('今日は木曜日です');
  Fri : Memo1.Append('今日は金曜日です');
  Sat : Memo1.Append('今日は土曜日です');
  Sun : Memo1.Append('今日は日曜日です');
  else
    Memo1.Append('入力エラーです。');
  end;
end;

end.
