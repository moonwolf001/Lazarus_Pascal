procedure TForm1.Button1Click(Sender: TObject);
begin
  SQLQuery1.Close;
  SQLQuery1.SQL.Text := 'INSERT INTO ToDoList1 (ToDo) VALUES (''' + Edit1.Text + ''')';
  SQLQuery1.ExecSQL;
  SQLTransaction1.Commit;

  // データセットを再度開いて、DBGridを更新
  SQLQuery1.SQL.Text := 'SELECT * FROM ToDoList1';
  SQLQuery1.Open;
end;                   
