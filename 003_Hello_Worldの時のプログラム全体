// Form1にButton1、Memo1を設置して、Button1を押したらHello WorldをMemo1に表示するプログラム全体像
// 記入したのは、「 Memo1.Append('Hello World!');」のみであり、他はLazarusが自動コードを自動生成したもの。

unit Unit1;

{$mode objfpc}{$H+}

interface

uses
  Classes, SysUtils, Forms, Controls, Graphics, Dialogs, StdCtrls;

type

  { TForm1 }

  TForm1 = class(TForm)
    Button1: TButton;
    Memo1: TMemo;
    procedure Button1Click(Sender: TObject);
  private

  public

  end;

var
  Form1: TForm1;

implementation

{$R *.lfm}

{ TForm1 }

procedure TForm1.Button1Click(Sender: TObject);
var
begin
  Memo1.Append('Hello World!');
end;

end.
